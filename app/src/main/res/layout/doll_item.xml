<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivDoll"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintEnd_toStartOf="@id/tvDollName"
        android:layout_marginEnd="20dp"
        />

    <TextView
        android:id="@+id/tvDollName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ivDoll"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Doll Name"/>

    <TextView
        android:id="@+id/tvDollDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doll Description"
        app:layout_constraintTop_toBottomOf="@id/tvDollName"
        app:layout_constraintStart_toEndOf="@id/ivDoll"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>